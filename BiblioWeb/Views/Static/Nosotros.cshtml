        <ul>
            <li><a asp-action="Menu" asp-controller="Home" class="active text-decoration-none">Inicio</a></li>
            <li><a asp-action="" asp-controller="Home" class="text-decoration-none">Carrito</a></li>
            <li><a asp-action="Login" asp-controller="Home" class="text-decoration-none">Iniciar Sesion</a></li>
