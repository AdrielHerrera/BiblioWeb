@model List<TbLibro>
@{
    Layout = null;
    int i = 0;
}

<!DOCTYPE html>
<html lang="esp">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BIBLIOWEB</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/project.css">
    <script src="https://kit.fontawesome.com/2c36e9b7b1.js"></script>
</head>
<body>
        <style>
    body {
        background-image: url(/img/bg.png);
    }    
    </style>
    <nav>
        <input type="checkbox" id="check">
        <label for="check" class="checkbtn">
            <i class="fas fa-bars"></i>
        </label>
        <label class="logo">BIBLIOWEB</label>
        <ul>
            <li><a asp-action="Menu" class="active text-decoration-none navA"><ion-icon name="grid"></ion-icon>Inicio</a></li>
            <li><a asp-action="Carrito" class="text-decoration-none navA"><ion-icon name="cart"></ion-icon>Carrito</a></li>
            <li><a href="Vender.html" class="text-decoration-none navA"><ion-icon name="pricetags"></ion-icon>Vender</a></li>
            <li><a href="User.html" class="text-decoration-none navA"><ion-icon name="person"></ion-icon>Username</a></li>
            <li><a href="LogIn.html" class="text-decoration-none navA"><ion-icon name="exit"></ion-icon>Salir Sesion</a></li>
        </ul>
    </nav>
    <br>
    <h2><ion-icon name="cart"></ion-icon>   Carrito</h2>
    <hr><br>
    <div class="page-container">
        @foreach (var item in Model)
        {                        
            
            <div href="Venta.html" class="product-container text-decoration-none">
                <img src="@item.Ruta">
                <h3>@item.Titulo</h3>
                <h2>@item.Autor</h2>
                <h4>@item.Genero</h4>
                <h2>@item.Precio</h2>   
                <input type="hidden" value="@item.IdLibro" name="books[@i]" />
            </div>
            i++;
        }    
    </div>
    <form asp-action="Carrito" asp-controller="Home" method="post">
        
        <input type="submit" value="Comprar" />
    </form>
</body>
</html>