
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="esp">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BiblioWeb</title>
    <link rel="stylesheet" href="~/css/project.css">
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</head>
<body>
    <section id="dividida">
        <div class="derecha">
            <form asp-action="Login" asp-controller="Home" method="post" class="login">
                <ion-icon name="book"></ion-icon>BiblioWeb
                <br><br>
                <h2>Inicia Sesion</h2>
                <hr><br>
                <h4><ion-icon name="mail"></ion-icon>e-mail:</h4>
                <input type="email" name="Correo" id="email" placeholder="correo electronico" required class="preInput">
                <br><br>
                <h4><ion-icon name="lock-closed"></ion-icon>Contraseña:</h4>
                <input type="password" name="Contraseña" id="contra" placeholder="contraseña" required class="preInput">
                <br><br><br>
                <button type="submit"  class="preButton">INICIAR</button>
            </form>
        </div>
        <div class="izquierda">
            <form asp-action="Registrar" asp-controller="Home" method="get" class="login">
                <br><br><br>
                <h2>Registrate</h2>
                <hr><br>
                Registrate para poder disfrutar de todo lo que te ofrece
                <br>
                BiblioWeb
                <br><br><br><br>
                <button type="submit" class="preButton" >REGISTRARSE</button>                               
            </form>
        </div>
    </section>
</body>
</html>