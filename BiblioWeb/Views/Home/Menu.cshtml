@model List<TbLibro>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="esp">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BIBLIOWEB</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/project.css">
    <script src="https://kit.fontawesome.com/2c36e9b7b1.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
</head>
<body>
    <style>
    body {
        background-image: url(/img/bg.png);
    }    
    </style>
<!--BARRA DE NAVEGACION-->
    <nav>
        <input type="checkbox" id="check">
        <label for="check" class="checkbtn">
            <i class="fas fa-bars"></i>
        </label>
        <label class="logo">BIBLIOWEB</label>
        <ul>
            <li><a asp-action="Menu" class="active text-decoration-none">Inicio</a></li>
            <li><a asp-action="" class="text-decoration-none">Carrito</a></li>
            <li><a asp-action="Login" class="text-decoration-none">Iniciar Sesion</a></li>
            <li><a asp-action="Registrar" class="text-decoration-none">Registrarse</a></li>
        </ul>
    </nav>
<!--CARRUSEL DE IMAGENES-->
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" cursive-current="true" cursive-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" cursive-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" cursive-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <a asp-action="Introduccion" asp-controller="Static"><img src="~/img/bgIntroduction.png" class="d-block w-100"  alt="banIntr"></a>
        </div>
        <div class="carousel-item">
            <a asp-action="Nosotros" asp-controller="Static"><img src="~/img/bgNosotros.png" class="d-block w-100"  alt="banNos"></a>
        </div>
        <div class="carousel-item">
            <a asp-action="Agradecimientos" asp-controller="Static"><img src="~/img/bgAgr.png" class="d-block w-100"  alt="banAgr"></a>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" cursive-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" cursive-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>    
    <br><br><br>
<!--PAGINA-->
    
    <div class="page-container">
        @foreach (var item in Model)
        {
            <a href="Venta.html" class="product-container text-decoration-none">
                <img src="@item.Ruta">
                <h3>@item.Titulo</h3>
                <h2>@item.Autor</h2>
                <h4>@item.Genero</h4>
                <h2>@item.Precio</h2>
            </a>
        }        
    </div>
    <br><br><br>
    <script src="~/js/popperjs.js" ></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-kjU+l4N0Yf4ZOJErLsIcvOU2qSb74wXpOhqTvwVx3OElZRweTnQ6d31fXEoRD1Jy" crossorigin="anonymous"></script>
</body>
</html>
