
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="esp">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BIBLIOWEB</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="~/css/project.css">
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script src="https://kit.fontawesome.com/2c36e9b7b1.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
</head>
<body>
<!--BARRA DE NAVEGACION-->
<nav>
    <input type="checkbox" id="check">
    <label for="check" class="checkbtn">
        <i class="fas fa-bars"></i>
    </label>
    <label class="logo"><ion-icon name="book"></ion-icon>BiblioWeb</label>
    <ul>
        <li><a asp-action="Menu" class="text-decoration-none navA"><ion-icon name="grid"></ion-icon>Inicio</a></li>
        <li><a asp-action="Carrito" class="text-decoration-none navA"><ion-icon name="cart"></ion-icon>Carrito</a></li>
        <li><a asp-action="Vender" class="active text-decoration-none navA"><ion-icon name="pricetags"></ion-icon>Vender</a></li>
        <li><a asp-action="UserConfig" class="text-decoration-none navA"><ion-icon name="person"></ion-icon>@ViewBag.Usuario</a></li>
        <li><a asp-action="Logout" class="text-decoration-none navA"><ion-icon name="exit"></ion-icon>Salir Sesion</a></li>

    </ul>
</nav>

<!--VENDER-->
    <br>
    <h2><ion-icon name="pricetags"></ion-icon>   Vender</h2>
    <hr><br>
    <section class="venderContainer">
        <form asp-action="Vender" method="post" asp-controller="Home" enctype="multipart/form-data" class="vender">
            <h4><ion-icon name="book"></ion-icon>Titulo: </h4>
            <input type="text" name="Titulo" id="titulo" placeholder="titulo" required>
            <br><br>
            <h4><ion-icon name="pencil"></ion-icon>Autor: </h4>
            <input type="text" name="Autor" id="autor" placeholder="autor" required>
            <br><br>
            <h4><ion-icon name="bookmarks"></ion-icon>Categorias: </h4>
            <input type="text" name="Genero" id="categorias" placeholder="categorias" required>
            <br><br>
            <h4><ion-icon name="newspaper"></ion-icon>Descripcion: </h4>
            <input type="text" name="Descripcion" id="descripcion" placeholder="descripcion" required>
            <br><br>
            <h4><ion-icon name="stats-chart"></ion-icon>Cantidad: </h4>
            <input type="text" name="Cantidad" id="cantidad" placeholder="cantidad" required>
            <br><br>
            <h4><ion-icon name="cash"></ion-icon>Precio: </h4>
            <input type="text" name="Precio" id="precio" placeholder="precio" required>
            <br><br>
            <h4><ion-icon name="image"></ion-icon>Imagen: </h4>
            <input type="file" accept="image/*" name="image" id="imagen" placeholder="imagen" required class="file">
            <br><br><br>
            <button type="submit" class="preButton">VENDER</button>
        </form>
    </section>
    <br><br><br><br><br>
</body>
</html>