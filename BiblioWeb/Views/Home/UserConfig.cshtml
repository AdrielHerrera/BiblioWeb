@model List<TbCliente>;
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="esp">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BIBLIOWEB</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="~/css/project.css">
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script src="https://kit.fontawesome.com/2c36e9b7b1.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
</head>
<body>
<!--BARRA DE NAVEGACION-->
    <nav>
        <input type="checkbox" id="check">
        <label for="check" class="checkbtn">
            <i class="fas fa-bars"></i>
        </label>
        <label class="logo"><ion-icon name="book"></ion-icon>BiblioWeb</label>
        <ul>
            <li><a asp-action="Menu" class="text-decoration-none navA"><ion-icon name="grid"></ion-icon>Inicio</a></li>
            <li><a asp-action="Carrito" class="text-decoration-none navA"><ion-icon name="cart"></ion-icon>Carrito</a></li>
            <li><a asp-action="Vender" class="text-decoration-none navA"><ion-icon name="pricetags"></ion-icon>Vender</a></li>
            <li><a asp-action="UserConfig" class="active text-decoration-none navA"><ion-icon name="person"></ion-icon>@ViewBag.Usuario</a></li>
            <li><a asp-action="Logout" class="text-decoration-none navA"><ion-icon name="exit"></ion-icon>Salir Sesion</a></li>
        </ul>
    </nav>

<!--USER-->
    <br>
    <h2><ion-icon name="person"></ion-icon>   @ViewBag.Usuario</h2>
    <hr><br>
    <form asp-action="UserConfig" asp-controller="Home" method="post" class="userContainer">
        <div class="user">
            <ion-icon name="mail"></ion-icon>e-mail: 
        </div>        
            <input type="email" name="Correo" value="@ViewBag.Usuario" class="userData" readonly/>        
        <div class="user">
            <ion-icon name="lock-closed"></ion-icon>Contraseña: 
        </div>        
            <input type="password" name="Contraseña" class="userData" required/>      
        <div class="user">
            <ion-icon name="person"></ion-icon>Nombre:
        </div>        
            <input type="text" name="Nombre" class="userData" value="@Model[0].Nombre" />        
        <div class="user">
            <ion-icon name="bookmark"></ion-icon>Apellido Paterno: 
        </div>
            <input type="text" name="ApellidoPat" class="userData" value="@Model[0].ApellidoPat" />        
        <div class="user">
            <ion-icon name="bookmarks"></ion-icon>Apellido Materno: 
        </div>        
            <input type="text" name="ApellidoMat" class="userData" value="@Model[0].ApellidoMat" />                
        <div class="user">
            <ion-icon name="paper-plane"></ion-icon>Colonia: 
        </div>        
            <input type="text" name="Colonia" class="userData" value="@Model[0].Colonia" />                
        <div class="user">
            <ion-icon name="car"></ion-icon>Calle: 
        </div>        
            <input type="text" name="Calle" class="userData" value="@Model[0].Calle" />                
        <div class="user">
            <ion-icon name="clipboard"></ion-icon>Numero: 
        </div>        
            <input type="text" name="Numero" class="userData" value="@Model[0].Numero" />                
         <button type="submit" class="preButton">Modificar</button>
    </form>
    <br><br><br><br><br>
</body>
</html>
